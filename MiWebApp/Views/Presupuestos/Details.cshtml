@model Models.Presupuesto

<section>
    <h4>Detalles del presupuesto</h4>
    <p><strong>ID:</strong> @Model.IdPresupuesto</p>
    <p><strong>Cliente:</strong> @Model.NombreDestinatario</p>
    <p><strong>Fecha:</strong> @Model.FechaCreacion</p>
</section>

<hr/>

<h4>Productos asociados</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>Producto</tr>
        <tr>Cantidad</tr>
        <tr>Precio unitario</tr>
        <tr>Subtotal</tr>
    </thead>
    <tbody>
        @foreach(var detalle in Model.PresupuestoDetalle){
            <tr>
                <td>@detalle.Producto.Descripcion</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Producto.Precio</td>
                <td>@(detalle.Cantidad * detalle.Producto.Precio)</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>